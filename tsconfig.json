{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"], // Added WebWorker for service worker context
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths & Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    },

    "typeRoots": ["./node_modules/@types", "./src/types"] // Added src/types for custom global types
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage", // Exclude coverage reports
    "**/*.test.ts", // Exclude test files from main compilation if not needed
    "**/*.test.tsx",
    "src/tests" // Exclude the tests directory itself
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}